{% extends layout %}

{% block head %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="public/scripts/pathologiePrincipales.js"></script>
    <link type="text/css" rel="stylesheet" href="public/styles/pathologiePrincipales.css"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
        
{% block content %}
    <ul class="collapsible">
        {% for item in symptomesByPathologie %}
            <li>
                <div class="collapsible-header"><i class="material-icons">transfer_within_a_station</i>{{ item.desc|capitalize }}</div>
                <div class="collapsible-body">
                    <ul>
                        {% for symptome in item.symptomes %}
                            <li>{{ symptome.desc }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </li>
        {% endfor %}
    </ul>

    <div onchange="filter(event)" class="row">
        <div class="input-field col s4 offset-m4">
            <select id="selectPatho" multiple searchable="Type description">
                {% set i = 1 %}
                {% for pathologie in pathologies %}
                    <option value={{ i }}>{{ pathologie.desc|capitalize }}</option>
                    {% set i = i + 1 %}
                {% endfor %}
            </select>
            <label>Type de pathologie</label>
        </div>
    </div>

    <script type="text/javascript">
    $(document).ready(function(){
        $('select').formSelect();
        $('.collapsible').collapsible();
    });
    </script>
{% endblock %}
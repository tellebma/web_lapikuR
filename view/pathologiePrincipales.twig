{% extends 'layout.twig' %}

{% block head %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="public/scripts/pathologiePrincipales.js"></script>
    <link type="text/css" rel="stylesheet" href="public/styles/pathologiePrincipales.css"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <body onload="fetchPathologies()">  

        <div  class="row">
            <div class="list col s8 push-s2">
                <ul class="collection">
                    <!-- Filled by API call -->
                </ul>
            </div>
        </div>

        <div  class="row">
            <div class="input-field col s4 push-s4">
                <select onchange="filterPathologies()" id="selectPatho" multiple searchable="Type description">
                    <option value=0>All</option>
                    <!-- Filled by API call -->
                </select>
                <label>Type de pathologie</label>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function(){
                $('select').formSelect();
            });
        </script>
    </body>
{% endblock %}
